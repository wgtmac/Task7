<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">

    <display-name>Task 7</display-name>
    <description> Mutual Fund Web Application Prototype </description>

    <servlet>
        <servlet-name>  controller-servlet       </servlet-name>
        <servlet-class>
        	edu.cmu.cs.webapp.task7.controller.Controller
        </servlet-class>
        <init-param>
          <param-name>    jdbcDriverName          </param-name> 
	      <param-value>   com.mysql.jdbc.Driver   </param-value>
        </init-param>
        <init-param>
          <param-name>    jdbcURL                 </param-name> 
	      <param-value>   jdbc:mysql:///test      </param-value>
        </init-param>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>  controller-servlet        </servlet-name>
        <url-pattern>   *.do                     </url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>  controller-servlet        </servlet-name>
        <url-pattern>   /todolist.do                    </url-pattern>
    </servlet-mapping>

    <welcome-file-list>
     	<welcome-file>index.html</welcome-file>
        <welcome-file>index.htm</welcome-file>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>todolist.do</welcome-file>
    </welcome-file-list>
</web-app>